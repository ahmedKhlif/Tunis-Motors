@model TP2.Models.CarListing

@{
    ViewData["Title"] = "Review Car Listing";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="fa fa-search me-2"></i>Review Car Listing: @Model.Name</h4>
                    <small>Submitted by @Model.Seller?.UserName on @Model.CreatedAt.ToString("MMM dd, yyyy")</small>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Car Image -->
                        <div class="col-md-6 mb-4">
                            <div class="text-center">
                                <img src="~/images/@(Model.Image ?? "noimage.jpg")" alt="@Model.Name"
                                     class="img-fluid rounded shadow" style="max-height: 300px;">
                            </div>
                        </div>

                        <!-- Car Details -->
                        <div class="col-md-6">
                            <h5 class="mb-3">Car Specifications</h5>
                            <div class="row">
                                <div class="col-sm-6">
                                    <p><strong>Model:</strong> @Model.Name</p>
                                    <p><strong>Brand:</strong> @Model.Brand</p>
                                    <p><strong>Year:</strong> @Model.Year</p>
                                    <p><strong>Mileage:</strong> @Model.Mileage.ToString("N0") km</p>
                                </div>
                                <div class="col-sm-6">
                                    <p><strong>Fuel Type:</strong> @Model.FuelType</p>
                                    <p><strong>Transmission:</strong> @Model.Transmission</p>
                                    <p><strong>Color:</strong> @Model.Color</p>
                                    <p><strong>Price:</strong> @Model.Price.ToString("N0") TND</p>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.VIN))
                            {
                                <p><strong>VIN:</strong> @Model.VIN</p>
                            }

                            @if (Model.EngineSize.HasValue)
                            {
                                <p><strong>Engine Size:</strong> @Model.EngineSize L</p>
                            }

                            @if (Model.Horsepower.HasValue)
                            {
                                <p><strong>Horsepower:</strong> @Model.Horsepower HP</p>
                            }

                            <div class="row">
                                <div class="col-sm-6">
                                    @if (Model.Doors.HasValue)
                                    {
                                        <p><strong>Doors:</strong> @Model.Doors</p>
                                    }
                                </div>
                                <div class="col-sm-6">
                                    @if (Model.Seats.HasValue)
                                    {
                                        <p><strong>Seats:</strong> @Model.Seats</p>
                                    }
                                </div>
                            </div>

                            <p><strong>Condition:</strong> @Model.Condition</p>
                            <p><strong>Location:</strong> @Model.Location</p>
                            <p><strong>Category:</strong> @Model.Category.CategoryName</p>
                        </div>
                    </div>

                    <!-- Description -->
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mt-4">
                            <h5>Description</h5>
                            <p>@Model.Description</p>
                        </div>
                    }

                    <!-- Features -->
                    @if (!string.IsNullOrEmpty(Model.Features))
                    {
                        <div class="mt-3">
                            <h5>Features</h5>
                            <p>@Model.Features</p>
                        </div>
                    }
                </div>

                <!-- Action Buttons -->
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <form asp-action="Approve" asp-route-id="@Model.ProductId" method="post">
                                <div class="mb-3">
                                    <label for="adminNoteApprove" class="form-label">Approval Note (optional)</label>
                                    <textarea class="form-control" id="adminNoteApprove" name="adminNote" rows="2"
                                              placeholder="Add any notes for the seller..."></textarea>
                                </div>
                                <button type="submit" class="btn btn-success btn-lg w-100">
                                    <i class="fa fa-check me-2"></i>Approve Listing
                                </button>
                            </form>
                        </div>
                        <div class="col-md-6">
                            <form asp-action="Reject" asp-route-id="@Model.ProductId" method="post">
                                <div class="mb-3">
                                    <label for="adminNoteReject" class="form-label">Rejection Reason <span class="text-danger">*</span></label>
                                    <textarea class="form-control" id="adminNoteReject" name="adminNote" rows="2" required
                                              placeholder="Explain why this listing is being rejected..."></textarea>
                                </div>
                                <button type="submit" class="btn btn-danger btn-lg w-100">
                                    <i class="fa fa-times me-2"></i>Reject Listing
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="text-center mt-3">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fa fa-arrow-left me-2"></i>Back to Pending Approvals
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
