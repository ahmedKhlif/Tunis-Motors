@model IEnumerable<TP2.Models.CarListing>

@{
    ViewData["Title"] = "Pending Approvals - Tunis Motors";
}

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Pending Approvals</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Dashboard</a></li>
                    <li class="active">Approvals</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fa fa-clipboard-check me-2"></i>Pending Car Approvals</h2>
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fa fa-arrow-left me-1"></i>Back to Dashboard
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var car in Model)
                    {
                        <div class="col-xl-4 col-lg-6 mb-4">
                            <div class="card h-100 shadow border-warning">
                                <div class="position-relative">
                                    <img src="~/images/@(car.Image ?? "noimage.jpg")" class="card-img-top" alt="@car.Name"
                                         style="height: 200px; object-fit: cover;">
                                    <span class="badge bg-warning text-dark position-absolute top-0 start-0 m-2">
                                        <i class="fa fa-clock"></i> Pending
                                    </span>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@car.Name</h5>
                                    <div class="mb-2">
                                        <span class="h6 text-success">@car.Price.ToString("N0") TND</span>
                                    </div>
                                    <div class="text-muted small mb-2">
                                        <div><i class="fa fa-calendar me-1"></i>@car.Year</div>
                                        <div><i class="fa fa-tachometer-alt me-1"></i>@car.Mileage.ToString("N0") km</div>
                                        <div><i class="fa fa-gas-pump me-1"></i>@car.FuelType</div>
                                        <div><i class="fa fa-user me-1"></i>@car.Seller?.UserName</div>
                                    </div>
                                    <p class="card-text flex-grow-1">@(car.Description?.Length > 100 ? car.Description.Substring(0, 100) + "..." : car.Description)</p>
                                    <div class="mt-auto">
                                        <div class="row g-1 mb-2">
                                            <div class="col-6">
                                                <a asp-action="Details" asp-route-id="@car.ProductId" class="btn btn-outline-info btn-sm w-100">
                                                    <i class="fa fa-eye"></i> Review
                                                </a>
                                            </div>
                                            <div class="col-6">
                                                <a asp-controller="Product" asp-action="Details" asp-route-id="@car.ProductId" class="btn btn-outline-primary btn-sm w-100">
                                                    <i class="fa fa-external-link-alt"></i> View
                                                </a>
                                            </div>
                                        </div>
                                        <div class="row g-1">
                                            <div class="col-6">
                                                <form asp-action="Approve" asp-route-id="@car.ProductId" method="post" class="d-inline w-100">
                                                    <button type="submit" class="btn btn-success btn-sm w-100">
                                                        <i class="fa fa-check"></i> Approve
                                                    </button>
                                                </form>
                                            </div>
                                            <div class="col-6">
                                                <button type="button" class="btn btn-danger btn-sm w-100" data-bs-toggle="modal" data-bs-target="#rejectModal" data-car-id="@car.ProductId" data-car-name="@car.Name">
                                                    <i class="fa fa-times"></i> Reject
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fa fa-check-circle fa-4x text-success mb-3"></i>
                    <h4 class="text-muted">No pending approvals</h4>
                    <p class="text-muted">All car listings have been reviewed.</p>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
                        <i class="fa fa-tachometer-alt me-2"></i>Back to Dashboard
                    </a>
                </div>
            }
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rejectModalLabel">Reject Car Listing</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Reject" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to reject <strong id="carName"></strong>?</p>
                    <div class="mb-3">
                        <label for="adminNote" class="form-label">Reason for rejection (optional)</label>
                        <textarea class="form-control" id="adminNote" name="adminNote" rows="3" placeholder="Provide feedback to the seller..."></textarea>
                    </div>
                    <input type="hidden" id="carId" name="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Listing</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Handle reject modal
        var rejectModal = document.getElementById('rejectModal');
        rejectModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var carId = button.getAttribute('data-car-id');
            var carName = button.getAttribute('data-car-name');

            var modalCarId = rejectModal.querySelector('#carId');
            var modalCarName = rejectModal.querySelector('#carName');

            modalCarId.value = carId;
            modalCarName.textContent = carName;
        });
    </script>
}
