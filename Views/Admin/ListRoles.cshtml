@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Role Management";
}

<!-- BREADCRUMB -->
<div class="bg-light py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
                <li class="breadcrumb-item"><a href="/Dashboard" class="text-decoration-none">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">Role Management</li>
            </ol>
        </nav>
    </div>
</div>

<!-- MAIN CONTENT -->
<div class="container py-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1"><i class="fa fa-users-cog me-2 text-primary"></i>Role Management</h1>
            <p class="text-muted mb-0">Manage user roles and permissions</p>
        </div>
        <a asp-action="CreateRole" class="btn btn-primary btn-lg">
            <i class="fa fa-plus-circle me-2"></i>Create New Role
        </a>
    </div>

    @if (Model.Any())
    {
        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="display-4 text-primary mb-2">
                            <i class="fa fa-users"></i>
                        </div>
                        <h3 class="h4 mb-1">@Model.Count()</h3>
                        <small class="text-muted">Total Roles</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="display-4 text-success mb-2">
                            <i class="fa fa-shield-alt"></i>
                        </div>
                        <h3 class="h4 mb-1">@Model.Count(r => r.Name.Contains("Admin"))</h3>
                        <small class="text-muted">Admin Roles</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="display-4 text-info mb-2">
                            <i class="fa fa-user-tie"></i>
                        </div>
                        <h3 class="h4 mb-1">@Model.Count(r => r.Name.Contains("Manager"))</h3>
                        <small class="text-muted">Manager Roles</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="display-4 text-warning mb-2">
                            <i class="fa fa-store"></i>
                        </div>
                        <h3 class="h4 mb-1">@Model.Count(r => r.Name.Contains("Seller"))</h3>
                        <small class="text-muted">Seller Roles</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Roles Grid -->
        <div class="row">
            @foreach (var role in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card border-0 shadow-lg h-100">
                        <div class="card-header bg-gradient-primary text-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="fa fa-user-shield me-2"></i>@role.Name
                                </h5>
                                <span class="badge bg-light text-dark">@role.Id.Substring(0, 8)</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <small class="text-muted d-block">Role ID</small>
                                <code class="small">@role.Id</code>
                            </div>

                            <!-- Role Description -->
                            <div class="mb-3">
                                <small class="text-muted d-block">Description</small>
                                <p class="mb-0 small">
                                    @{
                                        var roleName = role.Name.ToLower();
                                        if (roleName.Contains("admin"))
                                        {
                                            <text><i class="fa fa-crown text-warning me-1"></i>Full system access and management</text>
                                        }
                                        else if (roleName.Contains("manager"))
                                        {
                                            <text><i class="fa fa-clipboard-check text-info me-1"></i>Content approval and oversight</text>
                                        }
                                        else if (roleName.Contains("seller"))
                                        {
                                            <text><i class="fa fa-store text-success me-1"></i>Product listing and sales management</text>
                                        }
                                        else
                                        {
                                            <text><i class="fa fa-user text-muted me-1"></i>Custom role with specific permissions</text>
                                        }
                                    }
                                </p>
                            </div>

                            <!-- User Count (if available) -->
                            <div class="mb-3">
                                <small class="text-muted d-block">Assigned Users</small>
                                <span class="badge bg-secondary">
                                    <i class="fa fa-users me-1"></i>
                                    @(ViewBag.UserCounts != null && ViewBag.UserCounts.ContainsKey(role.Id)
                                        ? ViewBag.UserCounts[role.Id].ToString()
                                        : "0") users
                                </span>
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="d-flex gap-2">
                                <a asp-action="EditRole" asp-route-id="@role.Id"
                                   class="btn btn-outline-primary btn-sm flex-fill">
                                    <i class="fa fa-edit me-1"></i>Edit
                                </a>
                                @if (!new[] { "Admin", "Manager", "Seller" }.Contains(role.Name))
                                {
                                    <button class="btn btn-outline-danger btn-sm flex-fill"
                                            onclick="confirmDelete('@role.Id', '@role.Name')">
                                        <i class="fa fa-trash me-1"></i>Delete
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-outline-secondary btn-sm flex-fill" disabled>
                                        <i class="fa fa-lock me-1"></i>System Role
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- System Roles Notice -->
        <div class="card border-0 shadow-lg mt-4">
            <div class="card-body">
                <div class="alert alert-info mb-0">
                    <i class="fa fa-info-circle me-2"></i>
                    <strong>System Roles:</strong> Admin, Manager, and Seller roles are protected system roles and cannot be deleted.
                    They provide essential functionality for the platform.
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fa fa-users-cog fa-5x text-muted"></i>
            </div>
            <h3 class="text-muted mb-3">No Roles Created Yet</h3>
            <p class="text-muted mb-4">
                Start by creating your first user role to manage access permissions.<br>
                Common roles include Admin, Manager, and Seller.
            </p>
            <a asp-action="CreateRole" class="btn btn-primary btn-lg">
                <i class="fa fa-plus-circle me-2"></i>Create Your First Role
            </a>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fa fa-exclamation-triangle text-warning me-2"></i>Confirm Deletion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the role <strong id="roleName"></strong>?</p>
                <div class="alert alert-warning">
                    <i class="fa fa-warning me-2"></i>
                    This action cannot be undone. All users assigned to this role will lose their permissions.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" asp-action="DeleteRole" style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash me-2"></i>Delete Role
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(roleId, roleName) {
            document.getElementById('roleName').textContent = roleName;
            document.getElementById('deleteForm').action = '/Admin/DeleteRole/' + roleId;

            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        // Enhanced role cards animation
        $(document).ready(function() {
            $('.card').hover(
                function() {
                    $(this).addClass('shadow-lg').css('transform', 'translateY(-2px)');
                },
                function() {
                    $(this).removeClass('shadow-lg').css('transform', 'translateY(0)');
                }
            );
        });
    </script>
}
