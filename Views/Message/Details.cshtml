@model TP2.Models.Message

@{
    ViewData["Title"] = "Message Details";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@Model.Subject</h5>
                        <small class="text-muted">@Model.SentAt.ToString("MMM dd, yyyy HH:mm")</small>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-6">
                            <strong>From:</strong> @Model.Sender.UserName
                        </div>
                        <div class="col-sm-6">
                            <strong>To:</strong> @Model.Receiver.UserName
                        </div>
                    </div>

                    @if (Model.Listing != null)
                    {
                        <div class="mb-3">
                            <strong>Regarding:</strong>
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Listing.ProductId" class="text-decoration-none">
                                @Model.Listing.Name (@Model.Listing.Year)
                            </a>
                        </div>
                    }

                    <hr>

                    <div class="message-content">
                        <p class="mb-0">@Model.Content</p>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Inbox" class="btn btn-outline-secondary">
                            <i class="fa fa-arrow-left me-2"></i>Back to Inbox
                        </a>
                        <div>
                            @if (Model.Listing != null)
                            {
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Listing.ProductId" class="btn btn-outline-primary me-2">
                                    <i class="fa fa-eye me-1"></i>View Car
                                </a>
                            }
                            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this message?');">
                                <button type="submit" class="btn btn-outline-danger">
                                    <i class="fa fa-trash me-1"></i>Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
