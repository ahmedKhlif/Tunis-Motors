@model IEnumerable<TP2.Models.Message>

@{
    ViewData["Title"] = "Sent Messages - Tunis Motors";
}

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Sent Messages</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="#">Home</a></li>
                    <li class="active">Sent Messages</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="mb-0"><i class="fa fa-paper-plane me-2"></i>Sent Messages</h4>
                            <a asp-action="Compose" class="btn btn-light btn-sm">
                                <i class="fa fa-plus me-1"></i>Compose New
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (Model.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Subject</th>
                                            <th>To</th>
                                            <th>Listing</th>
                                            <th>Sent Date</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var message in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@message.Subject</strong>
                                                </td>
                                                <td>
                                                    @if (message.Receiver != null)
                                                    {
                                                        <span>@message.Receiver.UserName</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Unknown</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (message.Listing != null)
                                                    {
                                                        <a asp-controller="Product" asp-action="Details" asp-route-id="@message.Listing.ProductId" class="text-decoration-none">
                                                            @message.Listing.Name
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>@message.SentAt.ToString("dd/MM/yyyy HH:mm")</td>
                                                <td>
                                                    <span class="badge bg-success">
                                                        <i class="fa fa-check me-1"></i>Sent
                                                    </span>
                                                </td>
                                                <td>
                                                    <a asp-action="Details" asp-route-id="@message.Id" class="btn btn-sm btn-info">
                                                        <i class="fa fa-eye"></i> View
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fa fa-paper-plane fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No sent messages</h5>
                                <p class="text-muted">You haven't sent any messages yet.</p>
                                <a asp-action="Compose" class="btn btn-primary">
                                    <i class="fa fa-plus me-2"></i>Send Your First Message
                                </a>
                            </div>
                        }
                    </div>
                </div>

                <!-- Navigation -->
                <div class="mt-3">
                    <div class="btn-group" role="group">
                        <a asp-action="Inbox" class="btn btn-outline-primary">
                            <i class="fa fa-inbox me-1"></i>Inbox
                        </a>
                        <a asp-action="Sent" class="btn btn-primary">
                            <i class="fa fa-paper-plane me-1"></i>Sent
                        </a>
                        <a asp-action="Compose" class="btn btn-outline-success">
                            <i class="fa fa-plus me-1"></i>Compose
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
}