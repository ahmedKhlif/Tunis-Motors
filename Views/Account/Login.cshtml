@model TP2.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login - Tunis Motors";
}

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Login</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="#">Home</a></li>
                    <li class="active">Login</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="billing-details">
                    <div class="section-title">
                        <h3 class="title">Login to Your Account</h3>
                    </div>

                    @{
                        var returnUrl = Context.Request.Query["ReturnUrl"];
                    }

                    <form asp-route-returnurl="@returnUrl" method="post" class="form-horizontal">
                        <div asp-validation-summary="All" class="text-danger alert alert-danger" style="display: @((ViewData.ModelState.IsValid) ? "none" : "block")"></div>

                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Email Address</label>
                            <input asp-for="Email" class="input" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Password</label>
                            <input asp-for="Password" type="password" class="input" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="input-checkbox">
                                <input asp-for="RememberMe" id="remember-me">
                                <label for="remember-me">
                                    <span></span>
                                    Remember Me
                                </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="primary-btn order-submit">Login</button>
                        </div>

                        <div class="form-group">
                            <p>Don't have an account? <a asp-controller="Account" asp-action="Register">Register here</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
