@{
    ViewData["Title"] = "Password Reset Sent - Tunis Motors";
}

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Password Reset</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="/">Home</a></li>
                    <li class="active">Password Reset</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow">
                    <div class="card-header bg-success text-white text-center">
                        <h4 class="mb-0"><i class="fa fa-check-circle me-2"></i>Password Reset Link Sent</h4>
                    </div>
                    <div class="card-body text-center">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <div class="mb-4">
                            <i class="fa fa-envelope-open fa-4x text-success mb-3"></i>
                            <h5 class="card-title">Check Your Email</h5>
                            <p class="card-text text-muted">
                                We've sent a password reset link to your email address.
                                Please check your inbox and click the link to reset your password.
                            </p>
                        </div>

                        <div class="alert alert-info">
                            <h6><i class="fa fa-info-circle me-2"></i>Next Steps:</h6>
                            <ol class="text-start">
                                <li>Check your email inbox (and spam folder)</li>
                                <li>Click the password reset link</li>
                                <li>Enter your new password</li>
                                <li>Log in with your new password</li>
                            </ol>
                        </div>

                        <div class="alert alert-warning">
                            <i class="fa fa-clock me-2"></i>
                            <strong>Note:</strong> The password reset link will expire in 24 hours for security reasons.
                        </div>

                        <div class="mt-4">
                            <a asp-action="Login" class="btn btn-primary me-2">
                                <i class="fa fa-sign-in me-2"></i>Go to Login
                            </a>
                            <a asp-action="ForgotPassword" class="btn btn-outline-secondary">
                                <i class="fa fa-redo me-2"></i>Send Again
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->