@model dynamic

@{
    ViewData["Title"] = "Forgot Password - Tunis Motors";
}

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Forgot Password</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="/">Home</a></li>
                    <li class="active">Forgot Password</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow">
                    <div class="card-header bg-warning text-dark text-center">
                        <h4 class="mb-0"><i class="fa fa-key me-2"></i>Forgot Your Password?</h4>
                    </div>
                    <div class="card-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <div class="text-center mb-4">
                            <p class="text-muted">Enter your email address and we'll send you a link to reset your password.</p>
                        </div>

                        <form asp-action="ForgotPassword" method="post">
                            @Html.AntiForgeryToken()

                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fa fa-envelope me-2 text-primary"></i>Email Address
                                </label>
                                <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter your email address" required />
                                <small class="form-text text-muted">We'll send a password reset link to this email.</small>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-warning btn-lg">
                                    <i class="fa fa-paper-plane me-2"></i>Send Reset Link
                                </button>
                            </div>
                        </form>

                        <hr class="my-4">

                        <div class="text-center">
                            <p class="mb-2">Remember your password?</p>
                            <a asp-action="Login" class="btn btn-outline-primary">
                                <i class="fa fa-sign-in me-2"></i>Back to Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}