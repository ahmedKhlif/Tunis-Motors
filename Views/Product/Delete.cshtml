@model TP2.Models.CarListing

@{
    ViewData["Title"] = "Delete Car Listing";
    var photoPath = "~/images/" + (Model.Image ?? "noimage.jpg");
}

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Delete Car Listing</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Cars</a></li>
                    <li><a href="@Url.Action("Details", new { id = Model.ProductId })">@Model.Name</a></li>
                    <li class="active">Delete</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Delete Car Listing</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Cars</a></li>
                    <li><a href="@Url.Action("Details", new { id = Model.ProductId })">@Model.Name</a></li>
                    <li class="active">Delete</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-danger text-white">
                        <h4 class="mb-0"><i class="fa fa-trash-alt me-2"></i>Delete Car Listing</h4>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning" role="alert">
                            <i class="fa fa-exclamation-triangle me-2"></i>
                            <strong>Warning!</strong> This action cannot be undone. Are you sure you want to permanently delete this car listing?
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <img src="@photoPath" class="img-fluid rounded" alt="@Model.Name" onerror="this.src='~/images/noimage.jpg'">
                            </div>
                            <div class="col-md-8">
                                <h5 class="card-title">@Model.Name</h5>
                                <div class="mb-3">
                                    <span class="h6 text-success">@Model.Price.ToString("N0") TND</span>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <small class="text-muted d-block">Brand: <strong>@Model.Brand</strong></small>
                                        <small class="text-muted d-block">Year: <strong>@Model.Year</strong></small>
                                        <small class="text-muted d-block">Mileage: <strong>@Model.Mileage.ToString("N0") km</strong></small>
                                    </div>
                                    <div class="col-sm-6">
                                        <small class="text-muted d-block">Fuel Type: <strong>@Model.FuelType</strong></small>
                                        <small class="text-muted d-block">Transmission: <strong>@Model.Transmission</strong></small>
                                        <small class="text-muted d-block">Color: <strong>@Model.Color</strong></small>
                                    </div>
                                </div>

                                <div class="mt-3">
                                    <small class="text-muted d-block">Category: <strong>@Model.Category.CategoryName</strong></small>
                                    <small class="text-muted d-block">Stock: <strong>@Model.QuantityInStock</strong></small>
                                    @if (!Model.IsApproved)
                                    {
                                        <small class="text-warning d-block"><i class="fa fa-clock me-1"></i>Status: Pending Approval</small>
                                    }
                                    else
                                    {
                                        <small class="text-success d-block"><i class="fa fa-check me-1"></i>Status: Approved</small>
                                    }
                                </div>
                            </div>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-outline-secondary">
                                <i class="fa fa-arrow-left me-2"></i>Back to Details
                            </a>

                            <form asp-action="DeleteConfirmed" method="post" class="d-inline"
                                  onsubmit="return confirm('Are you absolutely sure you want to delete this car listing? This action cannot be undone.')">
                                <input type="hidden" asp-for="ProductId" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fa fa-trash me-2"></i>Yes, Delete This Listing
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
