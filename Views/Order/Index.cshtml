@model IEnumerable<TP2.Models.Order>

@{
    ViewData["Title"] = "Order Management - Tunis Motors";
}

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Order Management</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="/">Home</a></li>
                    <li><a href="/Dashboard">Dashboard</a></li>
                    <li class="active">Orders</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fa fa-shopping-bag me-2"></i>All Orders (@Model.Count())</h5>
                        <div class="d-flex gap-2">
                            <form method="get" class="d-flex">
                                <input type="text" name="search" value="@ViewBag.Search" class="form-control me-2" placeholder="Search by customer..." style="min-width: 200px;" />
                                <select name="status" class="form-select me-2" style="min-width: 150px;">
                                    <option value="">All Statuses</option>
                                    <option value="Pending" selected="@(ViewBag.Status == "Pending")">Pending</option>
                                    <option value="Confirmed" selected="@(ViewBag.Status == "Confirmed")">Confirmed</option>
                                    <option value="Processing" selected="@(ViewBag.Status == "Processing")">Processing</option>
                                    <option value="Shipped" selected="@(ViewBag.Status == "Shipped")">Shipped</option>
                                    <option value="Delivered" selected="@(ViewBag.Status == "Delivered")">Delivered</option>
                                    <option value="Cancelled" selected="@(ViewBag.Status == "Cancelled")">Cancelled</option>
                                    <option value="Refunded" selected="@(ViewBag.Status == "Refunded")">Refunded</option>
                                </select>
                                <button type="submit" class="btn btn-outline-light">
                                    <i class="fa fa-search"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (Model.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Order #</th>
                                            <th>Customer</th>
                                            <th>Status</th>
                                            <th>Total</th>
                                            <th>Date</th>
                                            <th>Items</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var order in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>#@order.Id</strong>
                                                </td>
                                                <td>
                                                    <div>
                                                        <strong>@order.CustomerName</strong>
                                                        <br />
                                                        <small class="text-muted">@order.Email</small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="badge bg-@order.StatusColor">
                                                        @order.StatusDisplay
                                                    </span>
                                                </td>
                                                <td>
                                                    <strong class="text-primary">@order.TotalAmount.ToString("N0") TND</strong>
                                                </td>
                                                <td>
                                                    @order.OrderDate.ToString("dd/MM/yyyy")
                                                    <br />
                                                    <small class="text-muted">@order.OrderDate.ToString("HH:mm")</small>
                                                </td>
                                                <td>
                                                    @order.Items.Count item(s)
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-primary" title="View Details">
                                                            <i class="fa fa-eye"></i>
                                                        </a>
                                                        @if (order.CanBeUpdated)
                                                        {
                                                            <button type="button" class="btn btn-outline-warning"
                                                                    onclick="openStatusModal(@order.Id, '@order.Status')"
                                                                    title="Update Status">
                                                                <i class="fa fa-edit"></i>
                                                            </button>
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fa fa-shopping-bag fa-4x text-muted mb-4"></i>
                                <h4 class="text-muted">No Orders Found</h4>
                                <p class="text-muted">No orders match your current filters.</p>
                                <a href="@Url.Action("Index")" class="btn btn-primary">
                                    <i class="fa fa-refresh me-2"></i>Clear Filters
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->

<!-- Status Update Modal -->
<div class="modal fade" id="statusModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Order Status</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="UpdateStatus" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="orderId" name="id" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="newStatus" class="form-label">New Status</label>
                        <select class="form-select" id="newStatus" name="newStatus" required>
                            <option value="Pending">Pending</option>
                            <option value="Confirmed">Confirmed</option>
                            <option value="Processing">Processing</option>
                            <option value="Shipped">Shipped</option>
                            <option value="Delivered">Delivered</option>
                            <option value="Cancelled">Cancelled</option>
                            <option value="Refunded">Refunded</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="notes" class="form-label">Notes (Optional)</label>
                        <textarea class="form-control" id="notes" name="notes" rows="3" placeholder="Add any notes about this status change..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Status</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openStatusModal(orderId, currentStatus) {
            document.getElementById('orderId').value = orderId;
            document.getElementById('newStatus').value = currentStatus;
            document.getElementById('notes').value = '';

            var modal = new bootstrap.Modal(document.getElementById('statusModal'));
            modal.show();
        }

        // Show success/error messages
        @if (TempData["Success"] != null)
        {
            <text>
            $(document).ready(function() {
                // You could add a toast notification here
                console.log('Success: @TempData["Success"]');
            });
            </text>
        }

        @if (TempData["Error"] != null)
        {
            <text>
            $(document).ready(function() {
                console.log('Error: @TempData["Error"]');
            });
            </text>
        }
    </script>
}