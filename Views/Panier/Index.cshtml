@{
    ViewData["Title"] = "Shopping Cart - Tunis Motors";
}

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Shopping Cart</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="#">Home</a></li>
                    <li class="active">Cart</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                @if (ViewBag.Liste.Count > 0)
                {
                    <div class="section-title">
                        <h3 class="title">Your Shopping Cart</h3>
                        <p>You have @ViewBag.Liste.Count item(s) in your cart</p>
                    </div>

                    <div class="row">
                        @foreach (var item in ViewBag.Liste)
                        {
                            <div class="col-lg-12 mb-4">
                                <div class="card shadow">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <!-- Product Image -->
                                            <div class="col-md-3 text-center">
                                                <img src="@Url.Content("~/images/" + (item.CarListing.Image ?? "noimage.jpg"))"
                                                     alt="@item.CarListing.Name"
                                                     class="img-fluid rounded"
                                                     style="max-height: 200px; object-fit: cover;"
                                                     onerror="this.src='@Url.Content("~/images/noimage.jpg")'">
                                            </div>

                                            <!-- Product Details -->
                                            <div class="col-md-5">
                                                <h5 class="card-title">
                                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.CarListing.ProductId" class="text-decoration-none">
                                                        @item.CarListing.Name
                                                    </a>
                                                </h5>
                                                <div class="mb-2">
                                                    <span class="badge bg-secondary">@item.CarListing.Category?.CategoryName</span>
                                                    @if (!item.CarListing.IsApproved)
                                                    {
                                                        <span class="badge bg-warning ms-2">Pending Approval</span>
                                                    }
                                                </div>
                                                <div class="text-muted small">
                                                    <div><i class="fa fa-calendar me-1"></i>@item.CarListing.Year</div>
                                                    <div><i class="fa fa-tachometer-alt me-1"></i>@item.CarListing.Mileage.ToString("N0") km</div>
                                                    <div><i class="fa fa-gas-pump me-1"></i>@item.CarListing.FuelType</div>
                                                </div>
                                            </div>

                                            <!-- Quantity Controls -->
                                            <div class="col-md-2 text-center">
                                                <div class="input-group mb-3">
                                                    <button class="btn btn-outline-secondary MinProducts" type="button" data-id="@item.CarListing.ProductId">
                                                        <i class="fa fa-minus"></i>
                                                    </button>
                                                    <input type="text" class="form-control text-center" id="quantite_@item.CarListing.ProductId"
                                                           value="@item.quantite" readonly style="max-width: 60px;">
                                                    <button class="btn btn-outline-secondary PlusProducts" type="button" data-id="@item.CarListing.ProductId">
                                                        <i class="fa fa-plus"></i>
                                                    </button>
                                                </div>
                                                <button class="btn btn-outline-danger btn-sm RemoveLink" data-id="@item.CarListing.ProductId">
                                                    <i class="fa fa-trash me-1"></i>Remove
                                                </button>
                                            </div>

                                            <!-- Price -->
                                            <div class="col-md-2 text-end">
                                                <div class="h5 text-success fw-bold">@item.CarListing.Price.ToString("N0") TND</div>
                                                <div class="text-muted small">
                                                    Total: <span id="total_@item.CarListing.ProductId" class="fw-bold">@item.TotalPrice.ToString("N0")</span> TND
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Cart Summary -->
                    <div class="row mt-4">
                        <div class="col-lg-8">
                            <div class="card shadow">
                                <div class="card-body">
                                    <h5 class="card-title">Cart Summary</h5>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="mb-1">Subtotal (@ViewBag.Liste.Count items)</p>
                                        </div>
                                        <div class="col-sm-6 text-end">
                                            <p class="mb-1 fw-bold">@ViewBag.total.ToString("N0") TND</p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <h5 class="mb-1">Total</h5>
                                        </div>
                                        <div class="col-sm-6 text-end">
                                            <h5 class="mb-1 text-success">@ViewBag.total.ToString("N0") TND</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="card shadow">
                                <div class="card-body">
                                    <h5 class="card-title">Checkout</h5>
                                    <p class="text-muted small mb-3">Ready to complete your purchase?</p>

                                    <div class="d-grid gap-2">
                                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary">
                                            <i class="fa fa-arrow-left me-2"></i>Continue Shopping
                                        </a>
                                        <a asp-action="Checkout" class="btn btn-success btn-lg">
                                            <i class="fa fa-credit-card me-2"></i>Proceed to Checkout
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Empty Cart -->
                    <div class="text-center py-5">
                        <div class="mb-4">
                            <i class="fa fa-shopping-cart fa-5x text-muted"></i>
                        </div>
                        <h3 class="text-muted mb-3">Your cart is empty</h3>
                        <p class="text-muted mb-4">
                            Looks like you haven't added any cars to your cart yet.<br>
                            Start browsing our amazing collection of vehicles!
                        </p>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="fa fa-car me-2"></i>Browse Cars
                        </a>
                    </div>
                }
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/Monscript.js" type="text/javascript"></script>
}
