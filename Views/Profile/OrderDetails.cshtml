@model TP2.Models.Order

@{
    ViewData["Title"] = $"Order #{Model.Id} Details - Tunis Motors";
}

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Order Details</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="/">Home</a></li>
                    <li><a href="/Profile/MyOrders">My Orders</a></li>
                    <li class="active">Order #@Model.Id</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- Order Details -->
            <div class="col-lg-8 mb-4">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0"><i class="fa fa-receipt me-2"></i>Order #@Model.Id Details</h4>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-sm-6">
                                <h6 class="text-muted mb-2"><i class="fa fa-calendar me-2"></i>Order Date</h6>
                                <p class="mb-0 fw-bold">@Model.OrderDate.ToString("dddd, MMMM dd, yyyy 'at' HH:mm")</p>
                            </div>
                            <div class="col-sm-6">
                                <h6 class="text-muted mb-2"><i class="fa fa-user me-2"></i>Customer</h6>
                                <p class="mb-0 fw-bold">@Model.CustomerName</p>
                                <small class="text-muted">@Model.Email</small>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-muted mb-2"><i class="fa fa-map-marker-alt me-2"></i>Delivery Address</h6>
                                <p class="mb-0 fw-bold">@Model.Address</p>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-sm-6">
                                <h6 class="text-muted mb-2"><i class="fa fa-credit-card me-2"></i>Payment Method</h6>
                                <p class="mb-0 fw-bold">@Model.PaymentMethod</p>
                            </div>
                            <div class="col-sm-6">
                                <h6 class="text-muted mb-2"><i class="fa fa-check-circle me-2"></i>Status</h6>
                                <span class="badge bg-success fs-6">Completed</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Items -->
                <div class="card shadow mt-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fa fa-shopping-bag me-2"></i>Order Items (@Model.Items.Count)</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.Items)
                        {
                            <div class="row mb-3 p-3 border rounded">
                                <div class="col-md-8">
                                    <h6 class="text-primary mb-2">@item.ProductName</h6>
                                    <div class="row">
                                        <div class="col-6">
                                            <small class="text-muted">Quantity</small>
                                            <div class="fw-bold">@item.Quantity</div>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Unit Price</small>
                                            <div class="fw-bold">@item.Price.ToString("N0") TND</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 text-end">
                                    <div class="h-100 d-flex align-items-center justify-content-end">
                                        <div class="text-center">
                                            <small class="text-muted">Total</small>
                                            <div class="fw-bold text-success fs-5">@((item.Quantity * item.Price).ToString("N0")) TND</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Order Summary Sidebar -->
            <div class="col-lg-4">
                <!-- Order Summary -->
                <div class="card shadow mb-4">
                    <div class="card-header bg-dark text-white">
                        <h6 class="mb-0"><i class="fa fa-calculator me-2"></i>Order Summary</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal (@Model.Items.Sum(i => i.Quantity) items)</span>
                            <span>@(Model.TotalAmount.ToString("N0")) TND</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping</span>
                            <span class="text-success">FREE</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <strong>Total Amount</strong>
                            <strong class="text-primary">@Model.TotalAmount.ToString("N0") TND</strong>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="card shadow">
                    <div class="card-header bg-info text-white">
                        <h6 class="mb-0"><i class="fa fa-cogs me-2"></i>Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("MyOrders", "Profile")" class="btn btn-outline-primary">
                                <i class="fa fa-arrow-left me-2"></i>Back to My Orders
                            </a>
                            <button onclick="window.print()" class="btn btn-outline-secondary">
                                <i class="fa fa-print me-2"></i>Print Order
                            </button>
                            <a href="mailto:support@carecommerce.tn?subject=Order #@Model.Id Inquiry" class="btn btn-outline-info">
                                <i class="fa fa-envelope me-2"></i>Contact Support
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->

@section Scripts {
    <script>
        // Print functionality
        function printOrder() {
            window.print();
        }
    </script>
}