@model IEnumerable<TP2.Models.Order>

@{
    ViewData["Title"] = "My Orders - Tunis Motors";
}

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">My Orders</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="#">Home</a></li>
                    <li class="active">My Orders</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0"><i class="fa fa-shopping-cart me-2"></i>My Orders</h4>
                    </div>
                    <div class="card-body">
                        @if (Model.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Order ID</th>
                                            <th>Order Date</th>
                                            <th>Customer Name</th>
                                            <th>Email</th>
                                            <th>Total Amount</th>
                                            <th>Items</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var order in Model)
                                        {
                                            <tr>
                                                <td>@order.Id</td>
                                                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                                <td>@order.CustomerName</td>
                                                <td>@order.Email</td>
                                                <td>@order.TotalAmount.ToString("C")</td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#orderItems-@order.Id" aria-expanded="false">
                                                        <i class="fa fa-eye me-1"></i>View Items (@order.Items.Count)
                                                    </button>
                                                </td>
                                                <td>
                                                    <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-info">
                                                        <i class="fa fa-eye"></i> Details
                                                    </a>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="7" class="p-0">
                                                    <div class="collapse" id="orderItems-@order.Id">
                                                        <div class="card card-body m-2 border-0 bg-light">
                                                            <h6 class="mb-3"><i class="fa fa-shopping-bag me-2 text-primary"></i>Order Items (@order.Items.Count)</h6>
                                                            <div class="row">
                                                                @foreach (var item in order.Items)
                                                                {
                                                                    <div class="col-md-6 mb-3">
                                                                        <div class="card h-100 border-start border-primary border-4">
                                                                            <div class="card-body">
                                                                                <div class="d-flex justify-content-between align-items-start">
                                                                                    <div class="flex-grow-1">
                                                                                        <h6 class="card-title mb-2 text-primary">@item.ProductName</h6>
                                                                                        <div class="row text-center">
                                                                                            <div class="col-6">
                                                                                                <small class="text-muted">Quantity</small>
                                                                                                <div class="fw-bold text-success">@item.Quantity</div>
                                                                                            </div>
                                                                                            <div class="col-6">
                                                                                                <small class="text-muted">Unit Price</small>
                                                                                                <div class="fw-bold text-info">@item.Price.ToString("N0") TND</div>
                                                                                            </div>
                                                                                        </div>
                                                                                    </div>
                                                                                    <div class="text-end">
                                                                                        <div class="badge bg-success fs-6 p-2">
                                                                                            <i class="fa fa-tag me-1"></i>@((item.Quantity * item.Price).ToString("N0")) TND
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                }
                                                            </div>
                                                            <hr>
                                                            <div class="text-end">
                                                                <h5 class="mb-0 text-success">
                                                                    <i class="fa fa-calculator me-2"></i>
                                                                    Total: @order.TotalAmount.ToString("N0") TND
                                                                </h5>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fa fa-shopping-cart fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No orders found</h5>
                                <p class="text-muted">You haven't placed any orders yet.</p>
                                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                                    <i class="fa fa-shopping-bag me-2"></i>Start Shopping
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
}