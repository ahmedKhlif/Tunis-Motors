@model IEnumerable<TP2.Models.Message>

@{
    ViewData["Title"] = "My Messages - Tunis Motors";
}

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">My Messages</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="#">Home</a></li>
                    <li class="active">My Messages</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0"><i class="fa fa-envelope me-2"></i>My Messages</h4>
                    </div>
                    <div class="card-body">
                        @if (Model.Any())
                        {
                            <div class="list-group">
                                @foreach (var message in Model)
                                {
                                    <div class="list-group-item list-group-item-action @(message.IsRead ? "" : "list-group-item-warning")">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h5 class="mb-1">
                                                @if (message.Sender != null)
                                                {
                                                    <small class="text-muted">From: @message.Sender.UserName</small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">From: Unknown</small>
                                                }
                                            </h5>
                                            <small>@message.SentAt.ToString("dd/MM/yyyy HH:mm")</small>
                                        </div>
                                        <p class="mb-1">@message.Subject</p>
                                        <small class="text-muted">@(message.Content.Length > 100 ? message.Content.Substring(0, 100) + "..." : message.Content)</small>
                                        <div class="mt-2">
                                            @if (message.Listing != null)
                                            {
                                                <span class="badge bg-info">Related to: @message.Listing.Name</span>
                                            }
                                            @if (!message.IsRead)
                                            {
                                                <span class="badge bg-warning text-dark">Unread</span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fa fa-envelope-o fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No messages found</h5>
                                <p class="text-muted">You haven't received any messages yet.</p>
                                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                                    <i class="fa fa-home me-2"></i>Back to Home
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->