@model IEnumerable<TP2.ViewModels.UserManagementViewModel>

@{
    ViewData["Title"] = "User Management - Admin Dashboard";
}

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">User Management</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Dashboard</a></li>
                    <li class="active">Users</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">User Management</h3>
                    <p>Manage all registered users and their roles</p>
                </div>

                @Html.AntiForgeryToken()

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Email</th>
                                <th>Username</th>
                                <th>Roles</th>
                                <th>Email Confirmed</th>
                                <th>Lockout Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Email</td>
                                    <td>@user.UserName</td>
                                    <td>
                                        @foreach (var role in user.Roles.Split(new[] { ", " }, StringSplitOptions.RemoveEmptyEntries))
                                        {
                                            <span class="badge bg-primary me-1">@role</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.EmailConfirmed)
                                        {
                                            <span class="badge bg-success">✓ Confirmed</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">✗ Not Confirmed</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.LockoutEnabled)
                                        {
                                            <span class="badge bg-danger">Locked</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            @{
                                                var rolesArray = user.Roles.Split(new[] { ", " }, StringSplitOptions.RemoveEmptyEntries);
                                                var firstRole = rolesArray.Length > 0 ? rolesArray[0] : "User";
                                            }
                                            <a asp-controller="Admin" asp-action="EditUsersInRole" asp-route-roleId="@firstRole" class="btn btn-sm btn-outline-primary">
                                                <i class="fa fa-edit"></i> Edit Roles
                                            </a>
                                            <a asp-controller="Profile" asp-action="Index" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info">
                                                <i class="fa fa-eye"></i> View Profile
                                            </a>
                                            @if (!user.LockoutEnabled)
                                            {
                                                <button class="btn btn-sm btn-outline-warning" onclick="lockUser('@user.Id')">
                                                    <i class="fa fa-lock"></i> Lock
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-sm btn-outline-success" onclick="unlockUser('@user.Id')">
                                                    <i class="fa fa-unlock"></i> Unlock
                                                </button>
                                            }
                                            <button class="btn btn-sm btn-outline-danger" onclick="deleteUser('@user.Id')">
                                                <i class="fa fa-trash"></i> Delete
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (!Model.Any())
                {
                    <div class="text-center py-5">
                        <i class="fa fa-users fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No users found</h4>
                    </div>
                }
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->

@section Scripts {
    <script>
        function lockUser(userId) {
            if (confirm('Are you sure you want to lock this user account?')) {
                fetch('/Admin/LockUser', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: 'userId=' + encodeURIComponent(userId)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('Error locking user: ' + error.message);
                });
            }
        }

        function unlockUser(userId) {
            if (confirm('Are you sure you want to unlock this user account?')) {
                fetch('/Admin/UnlockUser', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: 'userId=' + encodeURIComponent(userId)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('Error unlocking user: ' + error.message);
                });
            }
        }

        function deleteUser(userId) {
            if (confirm('Are you sure you want to permanently delete this user account? This action cannot be undone.')) {
                fetch('/Admin/DeleteUser', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: 'userId=' + encodeURIComponent(userId)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('Error deleting user: ' + error.message);
                });
            }
        }
    </script>
}
