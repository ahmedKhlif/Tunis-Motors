@model IEnumerable<TP2.Models.Category>

<div class="card border-0 shadow-lg">
    <div class="card-header bg-dark text-white">
        <h6 class="mb-0"><i class="fa fa-tags me-2"></i>Categories</h6>
    </div>
    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="p-3 text-muted small">
                <i class="fa fa-info-circle me-2"></i>No categories available.
            </div>
        }
        else
        {
            <div class="list-group list-group-flush">
                @foreach (var categorie in Model)
                {
                    <a class="list-group-item list-group-item-action d-flex align-items-center py-3 border-0"
                       asp-controller="Product" asp-action="Index"
                       asp-route-categoryId="@categorie.CategoryId">
                        <i class="fa fa-car me-3 text-primary"></i>
                        <span class="fw-medium">@categorie.CategoryName</span>
                        <i class="fa fa-chevron-right ms-auto text-muted"></i>
                    </a>
                }
            </div>
        }
    </div>
</div>
