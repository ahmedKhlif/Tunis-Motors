@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tunis Motors</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/images/logo.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/images/logo.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/logo.png">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Font Awesome 6 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" rel="stylesheet">

    <!-- Slick Carousel -->
    <link rel="stylesheet" href="~/css/slick.css" />
    <link rel="stylesheet" href="~/css/slick-theme.css" />

    <!-- nouislider -->
    <link rel="stylesheet" href="~/css/nouislider.min.css" />

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom-theme.css" asp-append-version="true" />
</head>
<body>
    <!-- TOP HEADER -->
    <div id="top-header" class="bg-light border-bottom">
        <div class="container">
            <div class="row align-items-center py-2">
                <div class="col-md-8">
                    <ul class="header-links list-unstyled d-flex flex-wrap mb-0">
                        <li class="me-4"><a href="tel:+216955184"><i class="fa fa-phone me-1"></i> +216 95 518 4</a></li>
                        <li class="me-4"><a href="mailto:contact@carecommerce.tn"><i class="fa fa-envelope me-1"></i> contact@carecommerce.tn</a></li>
                        <li><a href="#"><i class="fa fa-map-marker-alt me-1"></i> Tunis, Tunisia</a></li>
                    </ul>
                </div>
                <div class="col-md-4 text-md-end">
                    <ul class="header-links list-unstyled d-flex justify-content-end mb-0">
                        <li class="me-3"><a href="#"><i class="fa fa-tunisian-dinar me-1"></i> TND</a></li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li><a asp-controller="Profile" asp-action="Index"><i class="fa fa-user me-1"></i> My Account</a></li>
                        }
                        else
                        {
                            <li><a asp-controller="Account" asp-action="Login"><i class="fa fa-user me-1"></i> Login</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- MAIN HEADER -->
    <header id="header" class="py-3">
        <div class="container">
            <div class="row align-items-center">
                <!-- Logo -->
                <div class="col-md-3 col-6">
                    <a asp-controller="Home" asp-action="Index" class="logo">
                        <img src="~/images/logo.png" alt="Tunis Motors" class="img-fluid">
                    </a>
                </div>

                <!-- Search -->
                <div class="col-md-6 col-12 mt-3 mt-md-0">
                    <form asp-controller="Product" asp-action="Index" method="get" class="d-flex">
                        <select class="form-select me-2" name="categoryId" style="min-width: 150px;">
                            <option value="">All Categories</option>
                            @if (ViewData["Categories"] is IEnumerable<TP2.Models.Category> categories && categories.Any())
                            {
                                foreach (var category in categories)
                                {
                                    <option value="@category.CategoryId">@category.CategoryName</option>
                                }
                            }
                        </select>
                        <input class="form-control me-2" name="searchTerm" placeholder="Search cars..." value="@ViewBag.SearchTerm" />
                        <button class="btn btn-primary" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </form>
                </div>

                <!-- Header Actions -->
                <div class="col-md-3 col-6 text-end">
                    <div class="d-flex justify-content-end align-items-center gap-3">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <a href="#" class="position-relative text-decoration-none">
                                <i class="fa fa-envelope fa-lg"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="unread-count" style="font-size: 0.7em;">0</span>
                            </a>
                        }
                        <a asp-controller="Panier" asp-action="Index" class="position-relative text-decoration-none">
                            <i class="fa fa-shopping-cart fa-lg"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary" id="cart-count" style="font-size: 0.7em;">0</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- NAVIGATION -->
    <nav id="navigation" class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Left Menu -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @(Context.Request.Path == "/" || Context.Request.Path.StartsWithSegments("/Home") ? "active" : "")" asp-controller="Home" asp-action="Index">
                            <i class="fa fa-home me-1"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Product") && !Context.Request.Path.StartsWithSegments("/Product/Create") ? "active" : "")" asp-controller="Product" asp-action="Index">
                            <i class="fa fa-car me-1"></i> Browse Cars
                        </a>
                    </li>
                    @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Seller") || User.IsInRole("Admin") || User.IsInRole("Manager")))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Product/Create") ? "active" : "")" asp-controller="Product" asp-action="Create">
                                <i class="fa fa-plus-circle me-1"></i> Add Car
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Product" asp-action="Index" asp-route-searchTerm="new">
                            <i class="fa fa-car-battery me-1"></i> New Cars
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Product" asp-action="Index" asp-route-searchTerm="used">
                            <i class="fa fa-car-crash me-1"></i> Used Cars
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Product" asp-action="Index" asp-route-brand="BMW">
                            <i class="fab fa-bmw me-1"></i> BMW
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Product" asp-action="Index" asp-route-brand="Mercedes">
                            <i class="fab fa-mercedes me-1"></i> Mercedes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Product" asp-action="Index" asp-route-brand="Audi">
                            <i class="fab fa-audi me-1"></i> Audi
                        </a>
                    </li>
                </ul>

                <!-- Right Menu (User Actions) -->
                <ul class="navbar-nav">
                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-cog me-1"></i> Admin
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="Index"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a></li>
                                <li><a class="dropdown-item" asp-controller="Approval" asp-action="Index"><i class="fa fa-clipboard-check me-2"></i>Pending Approvals</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Category" asp-action="Index"><i class="fa fa-tags me-2"></i>Manage Categories</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="CreateRole"><i class="fa fa-user-plus me-2"></i>Create Role</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="ListRoles"><i class="fa fa-users me-2"></i>List Roles</a></li>
                                <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="Users"><i class="fa fa-user-cog me-2"></i>Manage Users</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Order" asp-action="Index"><i class="fa fa-shopping-bag me-2"></i>Manage Orders</a></li>
                            </ul>
                        </li>
                    }

                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Manager"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Approval" asp-action="Index">
                                <i class="fa fa-clipboard-check me-1"></i> Approvals
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Order" asp-action="Index">
                                <i class="fa fa-shopping-bag me-1"></i> Orders
                            </a>
                        </li>
                    }

                    @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Seller") || User.IsInRole("Admin") || User.IsInRole("Manager")))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-car me-1"></i> My Cars
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="Create"><i class="fa fa-plus me-2"></i>Add New Car</a></li>
                                <li><a class="dropdown-item" asp-controller="Profile" asp-action="MyListings"><i class="fa fa-list me-2"></i>My Listings</a></li>
                            </ul>
                        </li>
                    }

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-user me-1"></i> @User.Identity?.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index"><i class="fa fa-user-edit me-2"></i>My Profile</a></li>
                                <li><a class="dropdown-item" asp-controller="Profile" asp-action="MyOrders"><i class="fa fa-shopping-bag me-2"></i>My Orders</a></li>
                                <li><a class="dropdown-item" asp-controller="Message" asp-action="Inbox"><i class="fa fa-envelope me-2"></i>Messages</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Panier" asp-action="Index"><i class="fa fa-shopping-cart me-2"></i>My Cart</a></li>
                                <li><a class="dropdown-item" asp-controller="Wishlist" asp-action="Index"><i class="fa-regular fa-heart me-2"></i>My Wishlist</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fa fa-sign-out-alt me-2"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="fa fa-sign-in-alt me-1"></i> Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">
                                <i class="fa fa-user-plus me-1"></i> Register
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer id="footer" class="bg-dark text-white mt-5">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="footer-title">About Us</h5>
                    <p>Your trusted car e-commerce platform in Tunisia. Find your perfect vehicle with ease.</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-map-marker-alt me-2"></i>Tunis, Tunisia</li>
                        <li><i class="fas fa-phone me-2"></i>+216 95 518 4</li>
                        <li><i class="fas fa-envelope me-2"></i>contact@carecommerce.tn</li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="footer-title">Categories</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50"><i class="fas fa-car me-2"></i>All Cars</a></li>
                        <li><a href="#" class="text-white-50"><i class="fas fa-suv me-2"></i>SUV</a></li>
                        <li><a href="#" class="text-white-50"><i class="fas fa-car-side me-2"></i>Sedan</a></li>
                        <li><a href="#" class="text-white-50"><i class="fas fa-car me-2"></i>Hatchback</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="footer-title">Information</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50">About Us</a></li>
                        <li><a href="#" class="text-white-50">Contact Us</a></li>
                        <li><a href="#" class="text-white-50">Privacy Policy</a></li>
                        <li><a href="#" class="text-white-50">Terms & Conditions</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="footer-title">Service</h5>
                    <ul class="list-unstyled">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li><a href="#" class="text-white-50">My Account</a></li>
                            <li><a href="#" class="text-white-50">View Cart</a></li>
                            <li><a href="#" class="text-white-50">My Orders</a></li>
                        }
                        else
                        {
                            <li><a href="#" class="text-white-50">My Account</a></li>
                            <li><a href="#" class="text-white-50">View Cart</a></li>
                        }
                        <li><a href="#" class="text-white-50">Help</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="bg-black py-3">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="mb-0 text-white-50">Â© 2025 Tunis Motors. All rights reserved.</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <div class="payment-methods">
                            <i class="fab fa-cc-visa text-white me-2"></i>
                            <i class="fab fa-cc-mastercard text-white me-2"></i>
                            <i class="fab fa-cc-paypal text-white me-2"></i>
                            <i class="fab fa-cc-amex text-white"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/slick.min.js"></script>
    <script src="~/js/nouislider.min.js"></script>
    <script src="~/js/jquery.zoom.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/CustomScript.js"></script>

    <!-- Live Updates -->
    <script>
        $(document).ready(function() {
            // Update cart count every 30 seconds
            function updateCartCount() {
                $.get('/Panier/GetCartCount')
                    .done(function(data) {
                        $('#cart-count').text(data.cartCount || 0);
                    })
                    .fail(function() {
                        $('#cart-count').text('0');
                    });
            }

            // Update unread messages
            function updateUnreadCount() {
                $.get('/Message/GetUnreadCount')
                    .done(function(data) {
                        $('#unread-count').text(data.unreadCount || 0);
                    })
                    .fail(function() {
                        $('#unread-count').text('0');
                    });
            }

            // Initial load and periodic updates
            updateCartCount();
            updateUnreadCount();
            setInterval(updateCartCount, 30000);
            setInterval(updateUnreadCount, 30000);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>